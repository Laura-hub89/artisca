{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}
	<div class="container mb-5">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h1 class="text-center mt-5 mb-4">Réinitialisez votre mot de passe</h1>

		<div class="text-center">
			<p>
				Entrez votre adresse e-mail et nous vous enverrons un
				            lien pour réinitialiser votre mot de passe.
			</p>
		</div>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}

		<button class="btn btn-outline-royale rounded-pill ">Envoyer</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
