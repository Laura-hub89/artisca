{% extends 'base.html.twig' %}

{% block title %}Connexion!
{% endblock %}

{% block body %}

	<div class="container mb-5">

		<div class="text-center">
			<h1 class="text-center">Connexion</h1>

		</div>

		<div class="row">
			<div class="col-md-4 offset-md-4">
				<div class="login-form bg-light mt-4 p-4">
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								Vous êtes connecté en tant que
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Déconnexion</a>
							</div>
						{% endif %}
						<div class="text-center">
							<img src="{{ asset('image/logo.PNG') }}" class="tlogo rounded-circle">
						</div>

						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						<label for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>


						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																								        See https://symfony.com/doc/current/security/remember_me.html #}

						{# <div class="checkbox mb-3">
													<label>
														<input type="checkbox" name="_remember_me" Souviens-toi de moi
													</label>
												</div> #}
							<div class="d-flex justify-content-center"> <button class="btn btn-sm btn-outline-royale rounded-pill mt-2" type="submit">
								Valider
							</button>
						</div>


						<a href="{{ path ('app_forgot_password_request')}}" class="pac">Mot de passe oublié</a>
						<p class="mt-1">Vous n’avez pas de compte  ?
							<a href="{{path('app_register')}}" class="pac">Inscrivez-vous</a>
						</p>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
