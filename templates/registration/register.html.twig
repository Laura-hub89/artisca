{% extends 'base.html.twig' %}

{% block title %}Artisca : Inscription
{% endblock %}

{% block body %}
	<div class="container">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}

		<h1 class="text-center mt-5">Inscription</h1>
		<div class="d-flex justify-content-center">
			<hr class="w-75">
		</div>

		{{ form_start(registrationForm) }}

		<diV class="mt-3">
			<div class="row d-flex justify-content-center">
				<div class="col-4">
					{{ form_row(registrationForm.nom) }}
				</div>
				<div class="col-4">
					{{ form_row(registrationForm.prenom) }}
				</div>
			</div>

			<div class="row d-flex justify-content-center">
				<div class="col-4">
					{{ form_row(registrationForm.age) }}
				</div>
				<div class="col-4">
					{{ form_row(registrationForm.genre) }}
				</div>
			</div>

			<div class="row d-flex justify-content-center">
				<div class="col-4">
					{{ form_row(registrationForm.email) }}
				</div>
				<div class="col-4">
					{{ form_row(registrationForm.plainPassword) }}
				</div>
			</div>

			<div class="row d-flex justify-content-center">
				<div class="col-4">
					{{ form_row(registrationForm.telephone) }}
				</div>
				<div class="col-4">
					{{ form_row(registrationForm.poste_role, { label: "Profession" }) }}
				</div>
			</div>
		</div>
		<div class="row d-flex justify-content-center mt-3">
				<div class="col-4">{{ form_row(registrationForm.agreeTerms) }}</div>
				<div class="col-4">
					<button type="submit" class="btn btn-outline-royale rounded-pill">S'inscrire</button>
					{{ form_end(registrationForm) }}
				</div>
		</div>
		<div class="d-flex justify-content-center">
			<hr class="w-75">
		</div>
	</div>
{% endblock %}
