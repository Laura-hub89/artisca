{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-5 ">Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deroulement</th>
                <td>{{ article.deroulement }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ article.photo }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ article.video }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
